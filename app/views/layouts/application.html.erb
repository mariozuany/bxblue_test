<!DOCTYPE html>
<html>
  <head>
    <title>Memories</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

  <%= render template: "layouts/menu/_menu" %>

    <div class="container">
      <%= render template: "layouts/messages/_messages" %>
      <%= yield %>
    </div>

  <%= render template: "layouts/footer/_footer" %>
  <%= javascript_include_tag "#{controller_name}/#{action_name}" if asset_exist?("#{controller_name}/#{action_name}.js") %>
  </body>
</html>
